									</div>
									<div class="suitcase">	
										<h3><%= t "beadvisor.exposure.title" %></h3>
									</div>
									<div class="text">
										<p>
											<%= simple_format t "beadvisor.exposure.description" %>
										</p>
									</div>
								</div>

							</div>

						</div>

					</div>	

				</div>

				<header class=section-heading>
					<h2 class="text-center"><%= t "beadvisor.secheader" %></h2>
				</header>
										
				<div class="line-section mt-30 mb-30"></div>
										
				<div class="container section-advantages text-center">
					<div class="process col-lg-12">
						<h3 class="text-center mg-top-50"><%= t "beadvisor.description" %></h3>
					</div>	
				</div>	

				<div class="col-lg-12 text-center">
					<a href="#videoModal" data-toggle="modal">
						<%= image_tag "imac_hire.png" %>

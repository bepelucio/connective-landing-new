
	<!-- Modal starts -->
	<div class="modal fade" id="AdvisorModal" role="dialog">
		<div class="modal-dialog">
		  	<div class="modal-content">
			    <div class="modal-header">
			      <button type="button" class="close" data-dismiss="modal">&times;</button>
			      <h4 class="modal-title"><%= t "contact.modal.head" %></h4>
			    </div>
	   			
	    		<div class="wrapper">
	    			<div class="row">
	    				<div class="col-md-1"></div>
		                <div class="col-md-10">
		                	<label class="control-label">
		                		<%= simple_format t 'contact.modal.body.file' %>
		                	</label>	
		                </div>
		                <div class="col-md-1"></div>
		            </div>
		            <%= form_for(@advisor, url: solicitation_path) do |f| %>
			            <div class="row">
			            	<div class="col-md-2"></div>
			                <div class="col-md-8">
			                	<div class="form-group">
			                    	<%= f.attachment_field :curriculum, class: "form-control", accept: "application/pdf" %>
			                    </div>
			                </div>
			                <div class="col-md-2"></div>
			            </div>
			            <div class="row">
			            	<div class="col-md-2"></div>       
			                <div class="col-md-8">
			                	<label class="control-label"><%= t "contact.modal.body.url" %> <%= image_tag "linkedinlogo.png", class: "text-center" %> url: </label>
			                    <div class="form-group medium-down">
				                    <%= f.text_field :linkedin_url, class: "form-control" %>	
			                    </div>
		                     	<button id="submit" type="submit" class="btn-submit text-center"><%= t "contact.modal.body.submit" %></button>
			                </div>
			                <div class="col-md-2"></div>
			            </div>
		            <% end %>
	    		</div>
			</div>
		</div>
	</div>
	<!-- Modal ends -->

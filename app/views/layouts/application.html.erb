	  	<![endif]-->

	</head>
	<body>

		<%= render "layouts/flash_messages" %>
		
		<%= render "layouts/navbar" %>

		<%= yield %>

		<%= render "layouts/footer" %>

		<%= render "layouts/advisor_modal" %>
		
	</body>
</html>
